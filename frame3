<script>
    function toggleButton(event, selected) {
        event.preventDefault(); // Prevent form submission
        const btnMale = document.getElementById('btn-male');
        const btnFemale = document.getElementById('btn-female');

        if (selected === 'male') {
            btnMale.classList.add('btn-toggle-male');
            btnMale.classList.remove('btn-toggle-female');
            btnFemale.classList.add('btn-toggle-female');
            btnFemale.classList.remove('btn-toggle-male');
        } else {
            btnMale.classList.add('btn-toggle-female');
            btnMale.classList.remove('btn-toggle-male');
            btnFemale.classList.add('btn-toggle-male');
            btnFemale.classList.remove('btn-toggle-female');
        }
    }

    function previewImage(event) {
        const preview = document.getElementById('preview-image');
        const file = event.target.files[0];
        const reader = new FileReader();

        reader.onloadend = function() {
            preview.src = reader.result;
            preview.style.display = 'block';
        }

        if (file) {
            reader.readAsDataURL(file);
        } else {
            preview.src = '';
        }
    }
</script>

